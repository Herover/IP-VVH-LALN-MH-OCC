(* 3G1 *)
load "Int";
load "Word8";
load "Word8Vector";
load "BinIO";

use "InstagraML.sml";

val torben = InstagraML.readBMP "torben.bmp";
val ralf = InstagraML.readBMP "ralf.bmp";

fun solid col (w, h) = 
  let val px = InstagraML.pixel(col)
  in InstagraML.scale w h px
  end;

fun solid2 col (w,h) = 
  InstagraML.scale w h (InstagraML.pixel col);

val sort = solid2(0,0,0);(* dfg *)

sort(50.0, 50.0);

(*val sortpix = InstagraML.pixel(0,0,0);
val sortbox = InstagraML.scale 0.0 0.0 sortpix ;
